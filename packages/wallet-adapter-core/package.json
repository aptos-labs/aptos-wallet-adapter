    "Wallet",
    "Wallet Adapter",
    "Aptos Wallet"
  ],
  "devDependencies": {
    "@aptos/wallet-adapter-tsconfig": "workspace:*",
    "eslint": "^8.15.0",
    "eslint-config-adapter": "*",
    "tsup": "^5.10.1",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "aptos": "^1.3.17",
