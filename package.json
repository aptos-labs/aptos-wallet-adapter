{
  "name": "@aptos-labs/wallet-adapter",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset version && changeset publish"
  },
  "devDependencies": {
    "@aptos-labs/eslint-config-adapter": "workspace:*",
    "@changesets/cli": "^2.29.7",
    "prettier": "catalog:",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {},
  "packageManager": "pnpm@9.15.5",
  "pnpm": {
    "overrides": {
      "@aptos-labs/aptos-client": "^2.0.0",
      "pbkdf2": "^3.1.3",
      "form-data": "^4.0.4",
      "sha.js": "^2.4.12",
      "axios": "^1.12.0",
      "devalue": "^5.3.2",
      "esbuild": ">=0.25.0",
      "koa": "^2.16.1",
      "vite": "^6.3.6"
    }
  }
}
