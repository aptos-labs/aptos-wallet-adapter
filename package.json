{
  "name": "@aptos-labs/wallet-adapter",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset version && changeset publish"
  },
  "devDependencies": {
    "@aptos-labs/eslint-config-adapter": "workspace:*",
    "@changesets/cli": "^2.29.7",
    "prettier": "catalog:",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {},
  "packageManager": "pnpm@9.15.5",
  "pnpm": {
    "overrides": {
      "axios": "^1.13.5",
      "glob@^10": "^10.5.0",
      "valibot": "^1.2.0",
      "minimatch@^9": "^9.0.7",
      "minimatch@^3": "^3.1.4",
      "bn.js@^4": "^4.12.3",
      "bn.js@^5": "^5.2.3",
      "ajv@^6": "^6.14.0",
      "js-yaml@^4": "^4.1.1"
    }
  }
}
